<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onPageLoaded">
    <StackLayout>
        <TextField hint="Email" keyboardType="email" text="{{ email }}" />
        <TextField hint="Password" secure="true" text="{{ password }}" />
        <Button class="main-btn" text="Login" tap="{{ loginUser }}" />
        <Button class="main-btn" text="Register" tap="{{ navigateToRegister }}" />
    </StackLayout>
</Page>